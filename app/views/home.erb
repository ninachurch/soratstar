<!DOCTYPE html>


<body>
    <div class="container-fluid">
        <div class="row">
            <%@crafts_array.each do |craft|%>
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <a href="/craft/<%=craft.id%>">
                        <img src=<%=craft.image_url%> alt=<%=craft.name%> /> </a>
                        <div class="caption">
                            <h3><a href="/craft/<%=craft.id%>"><%=craft.name%></a></h3>
                            <p><%=craft.description%></p>
                            <h6><a href="<%=craft.source_url%>">from: <%=craft.source_url%></a></h6>
                            <p><a href="#" class="glyphicon glyphicon-star" class="btn btn-primary" role="button"></a>
                        </div>
                    </div>
                </div>
            <%end%>
        </div>


    </div>

</body>